{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", "tab"],
        "guard-for-in": "off",
        "quotes": ["error", "double"],
        "func-names": "off",
        "class-methods-use-this": "off",
        "linebreak-style": "off",
        "no-console": "off",
        "no-restricted-syntax": "off",
        "no-underscore-dangle": "off",
        "prefer-destructuring": "off",
        "max-classes-per-file": ["error", 5]
    }
}
